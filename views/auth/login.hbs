 <form action="/auth/login" method="POST">
    <h2>    Login</h2>
    <label>User</label>
    <input type="text" name="email"  required>
    <label>Password</label>
    <input type="password" name="password" required>
    <input type="submit" value="Login">
    <p class="msg">{{msg}}</p>
    <p class="err">{{err}}</p>
  </form>